<style>
  @font-face {
    font-family: "MyFont";
    src: url("/NeonVampire.otf") format("opentype");
    font-weight: normal;
    font-style: normal;
  }

  #search2 {
    display: none;
  }
  #search {
    border-color: #ffffff;
    color: #ffffff;
    background-color: #ab1f27;
    font-size: 20px;
    font-family: Avenir Next;
    margin-bottom: 58px;
    max-width: 200px;
  }

  button:hover {
    color: var(--red);
  }

  a {
    color: #ffffff;
  }
  a:hover {
    color: #000000;
  }

  .ikonerhvid a svg {
    fill: #ffffff;
    transition: fill 0.3s;
  }

  .ikonerhvid a:hover svg {
    fill: #000000;
  }
  .grid {
    display: flex;
  }

  /* Styling p√• logo (font-face ligger i style.css*/
  a p {
    display: block;
    font-size: 1.5rem;
    font-family: "MyFont", sans-serif;
    position: absolute;
    left: 50%;
    transform: translateX(-50%);
    width: 8.5625rem;
    z-index: 2;
    margin-top: 25px;
  }
  .ikonerhvid {
    display: block;
    position: absolute;
    margin-top: 22px;
    right: 35px;
    z-index: 2;
  }

  #logo {
    display: flex;
  }

  #burger_menu {
    text-indent: -9999px;
    border: none;
    background: transparent;
    margin: 25px;
    cursor: pointer;
    height: 27px;
    width: 27px;
    position: relative;
    z-index: 2;
    padding: 10px;
  }

  #burger_menu img {
    height: auto;
    width: 100px;
    display: block;
  }

  ul {
    list-style: none;
    display: flex;
    gap: 20px;
    font-size: 20px;
    font-family: Avenir Next;
    margin-top: 25px;
    margin-left: 22px;
  }

  #menu a {
    text-decoration: none;
    color: #ffffff;
  }

  #menu a:hover {
    color: #000000;
    transition: 0.1s;
  }

  #menu {
    margin-left: -110px;
  }

  @media screen and (max-width: 800px) {
    .burger {
      color: #000000;
    }

    .svgblack {
      stroke: black;
    }
    .b .search_ikon {
      display: none;
    }

    #search {
      display: none;
      font-size: 12px;
      color: #000000;
      background-color: #ffffff;
      border-color: #000000;
      margin-bottom: 58px;
    }
    #search2 {
      display: block;
      margin-left: auto;
      margin-right: auto;
      border-color: #000000;
      background-color: #ffffff;
      font-size: 12px;
      font-family: Avenir Next;
      margin-bottom: 58px;
      text-align: center;
    }

    ul {
      list-style: none;
      display: block;
      gap: 20px;
      font-size: 20px;
      font-family: Avenir Next;
    }

    a {
      color: #ffffff;
    }

    #burger_menu {
      display: block;
    }
    #burger_menu span,
    #burger_menu span:before,
    #burger_menu span:after {
      background: #ffffff;
      display: block;
      height: 3px;
      position: absolute;
      content: "";
    }
    #burger_menu span:before {
      left: 0px;
      top: -10px;
      width: 27px;
    }
    #burger_menu span {
      right: 0px;
      top: 13px;
      width: 27px;
    }
    #burger_menu span:after {
      left: 0px;
      top: 10px;
      width: 27px;
      border: #000000;
    }
    #burger_menu.close span:before {
      top: 0px;
      transform: rotate(90deg);
      width: 27px;
      background: #000000;
      border: #000000;
    }
    #burger_menu.close span {
      transform: rotate(-45deg);
      top: 13px;
      width: 27px;
      background: #000000;
      border: #000000;
    }
    #burger_menu.close span:after {
      top: 0px;
      left: 0;
      transform: rotate(90deg);
      opacity: 0;
      width: 0;
      background: #000000;
    }
    #menu {
      z-index: 1;
      min-width: 100%;
      min-height: 250px;
      position: fixed;
      top: 0;
      height: 0;
      visibility: hidden;
      opacity: 0;
      text-align: center;
      padding-top: 20px;
      margin-left: 0;
      border-bottom: solid #000000;
      left: 0;
    }
    #menu.overlay {
      visibility: visible;
      opacity: 1;
      padding-top: 100px;
      background: #ffffff;
    }

    #menu ul {
      padding: 0;
    }
    #menu li {
      list-style: none;
      display: initial;
    }
    #menu a {
      color: #000000;
      display: block;
      font-size: 12px;
      margin-bottom: 58px;
      text-decoration: none;
    }

    .ikonerhvid {
      margin-top: 29px;
    }
  }
</style>
